doctype html
html
  head
    title= title
    link(rel='stylesheet' href='/stylesheets/style.css')
  body
    .container
      h1= title

      form(action=`/update/${todo._id}` method="POST")
        label(for="item") Item:
        input(type="text" id="item" name="item" value=todo.item required)

        label(for="description") Description:
        input(type="text" id="description" name="description" value=todo.description)

        button(type="submit") Update Item
      a.cancel-link(href="/") Cancel